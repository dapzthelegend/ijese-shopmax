<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        tools:context=".QuoteFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:id="@+id/new_withdrawal_appbar"
            android:layout_height="?actionBarSize"
            android:background="@color/colorWhite"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:paddingStart="10dp"
                app:tint="@color/colorPrimary"
                android:paddingEnd="10dp"
                android:id="@+id/quotes_close_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Quotes"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <ScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:scrollbars="none"
            android:id="@+id/quote_scrollview"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/quote_product_name_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:text="Product Name"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"

                    android:textColor="@color/colorTextBlack"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/quote_product_name_edittext"
                    app:layout_constraintTop_toBottomOf="@id/quote_product_name_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="Enter Product Name..."
                    android:inputType="text"
                    android:background="@drawable/background_rounded_edittext"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"
                    android:layout_height="50dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/quote_weight_height_label_linearlayout"
                    app:layout_constraintTop_toBottomOf="@id/quote_product_name_edittext"
                    app:layout_constraintStart_toStartOf="parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:id="@+id/quote_weight_label_textview"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Weight"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:id="@+id/quote_height_label_textview"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Height"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/quote_weight_height_linearlayout"

                    app:layout_constraintTop_toBottomOf="@id/quote_weight_height_label_linearlayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/quote_weight_edittext"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toBottomOf="@id/quote_weight_label_textview"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:hint="enter weight in kg..."
                        android:inputType="numberDecimal"
                        android:background="@drawable/background_rounded_edittext"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_height="50dp"
                        />
                    <EditText
                        android:layout_width="0dp" android:layout_weight="1"
                        android:id="@+id/quote_height_edittext"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toBottomOf="@id/quote_weight_label_textview"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:hint="enter height..."
                        android:inputType="numberDecimal"
                        android:background="@drawable/background_rounded_edittext"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_height="50dp"
                        />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/quote_length_width_label_linearlayout"
                    app:layout_constraintTop_toBottomOf="@id/quote_weight_height_linearlayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:id="@+id/quote_length_label_textview"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Length"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:id="@+id/quote_width_label_textview"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Width"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/quote_length_width_linearlayout"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/quote_length_width_label_linearlayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/quote_length_edittext"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toBottomOf="@id/quote_weight_label_textview"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:hint="enter length..."
                        android:inputType="numberDecimal"
                        android:background="@drawable/background_rounded_edittext"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_height="50dp"
                        />
                    <EditText
                        android:layout_width="0dp" android:layout_weight="1"
                        android:id="@+id/quote_width_edittext"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toBottomOf="@id/quote_weight_label_textview"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:hint="enter width..."
                        android:inputType="numberDecimal"
                        android:background="@drawable/background_rounded_edittext"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_height="50dp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/quote_receiver_name_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:text="Receiver's Name"
                    app:layout_constraintTop_toBottomOf="@id/quote_length_width_linearlayout"
                    android:textSize="16sp"

                    android:textColor="@color/colorTextBlack"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/quote_receiver_name_edittext"
                    app:layout_constraintTop_toBottomOf="@id/quote_receiver_name_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="Enter Receiver's Name..."
                    android:inputType="text"
                    android:background="@drawable/background_rounded_edittext"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"
                    android:layout_height="50dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/quote_receiver_address_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:text="Receiver's Address"
                    app:layout_constraintTop_toBottomOf="@id/quote_receiver_name_edittext"
                    android:textSize="16sp"

                    android:textColor="@color/colorTextBlack"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/quote_reciever_address_edittext"
                    app:layout_constraintTop_toBottomOf="@id/quote_receiver_address_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="enter receiver's address..."
                    android:inputType="text"
                    android:background="@drawable/background_rounded_edittext"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"
                    android:layout_height="50dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/quote_pickup_name_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:text="Pickup Name"
                    app:layout_constraintTop_toBottomOf="@id/quote_reciever_address_edittext"
                    android:textSize="16sp"

                    android:textColor="@color/colorTextBlack"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/quote_pickup_name_edittext"
                    app:layout_constraintTop_toBottomOf="@id/quote_pickup_name_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="enter pickup name..."
                    android:inputType="text"
                    android:background="@drawable/background_rounded_edittext"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"
                    android:layout_height="50dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/quote_pickup_address_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:text="Pickup Address"
                    app:layout_constraintTop_toBottomOf="@id/quote_pickup_name_edittext"
                    android:textSize="16sp"

                    android:textColor="@color/colorTextBlack"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/quote_pickup_address_edittext"
                    app:layout_constraintTop_toBottomOf="@id/quote_pickup_address_label_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="enter pickup address..."
                    android:inputType="text"
                    android:background="@drawable/background_rounded_edittext"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"
                    android:layout_height="50dp"
                    />







            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>













    </LinearLayout>
</layout>