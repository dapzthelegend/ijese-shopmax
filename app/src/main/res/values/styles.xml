<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>


    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ShapeAppearanceOverlay.MaterialComponents.ExtendedFloatingActionButton.Custom" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton.Custom" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>

    <style name="ShapeAppearance.App.CornerRadius" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">25dp</item>
</style>

    <style name="Base.TextAppearance.MaterialComponents.Button.RoundedCorners" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">15dp </item>
        <item name="textAllCaps">false</item>


    </style>

    <style name="Base.Widget.AppCompat.ProgressBar.Custom" parent="Widget.AppCompat.ProgressBar">
        <item name="android:color">@color/colorPrimary</item>
    </style>

</resources>